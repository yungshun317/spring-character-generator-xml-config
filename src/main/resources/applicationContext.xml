<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- Define Your Beans Here -->

    <!-- Define the Dependency -->
    <bean id="newPersonalityService" class="yungshun.chang.springcharactergeneratorxmlconfiguration.PositivePersonalityService"></bean>
    <bean id="newMaleCharacter" class="yungshun.chang.springcharactergeneratorxmlconfiguration.MaleCharacter">

        <!-- Set up constructor injection -->
        <constructor-arg ref="newPersonalityService"></constructor-arg>
    </bean>

    <bean id="newFemaleCharacter" class="yungshun.chang.springcharactergeneratorxmlconfiguration.FemaleCharacter">

        <!-- Set up setter injection -->
        <property name="personalityService" ref="newPersonalityService" />

        <!-- Inject literal values -->
        <property name="age" value="18" />
        <property name="socialClass" value="working" />
    </bean>

</beans>